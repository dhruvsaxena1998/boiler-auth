{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "~/*": ["./*"],
      "@lib/*": ["./lib/*"],

      "#env": ["./src/env.ts"],
      "#database": ["./src/database/index.ts"],

      "#routes/*": ["./src/routes/*"],
      "#schemas/*": ["./src/database/schema/*"],
      "#utils/*": ["./src/utils/*"]
    },
    "types": [
      "node"
    ],
    "strict": true,
    "skipLibCheck": true
  }
}
